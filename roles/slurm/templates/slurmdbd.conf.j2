#
# slurmdbd.conf
#
# Authentication info
AuthType=auth/munge
# slurmDBD info
DbdAddr={{ slurm_dbd_machine }}
DbdHost={{ slurm_dbd_machine }}
DbdPort=6819
SlurmUser=slurm
DebugLevel=4
LogFile=/var/log/slurm/slurmdbd.log
PidFile=/var/run/slurm/slurmdbd.pid
# Database info
StorageType=accounting_storage/mysql
StorageHost=localhost
#StoragePort=1234
StoragePass={{ slurm_dbd_storagepass }}
StorageUser={{ slurm_dbd_storageuser }}
StorageLoc=slurm_acct_db
